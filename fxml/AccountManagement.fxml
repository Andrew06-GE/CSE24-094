<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.com.banking.Controller.AccountManagementController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f5f5;"
      prefWidth="800" prefHeight="600">

    <Label text="Account Management"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066cc;"/>

    <Separator style="-fx-background-color: #cccccc;"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="Open Savings Account"
                onAction="#handleOpenSavingsAccount"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="180" prefHeight="40"/>

        <Button text="Open Investment Account"
                onAction="#handleOpenInvestmentAccount"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="180" prefHeight="40"/>

        <Button text="Open Cheque Account"
                onAction="#handleOpenChequeAccount"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="180" prefHeight="40"/>

        <Button text="View Customer Accounts"
                onAction="#handleViewCustomerAccounts"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #9C27B0; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="180" prefHeight="40"/>
    </HBox>

    <Label text="Output:"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <TextArea fx:id="outputArea"
              prefWidth="760" prefHeight="400"
              style="-fx-font-family: 'Monospaced'; -fx-font-size: 12px;"
              editable="false" wrapText="true"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Back to Main Menu"
                onAction="#handleBackToMain"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #cccccc; -fx-text-fill: black; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="200" prefHeight="40"/>
    </HBox>
</VBox>