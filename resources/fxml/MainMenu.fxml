<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.banking.Controller.MainMenuController"
      spacing="20" style="-fx-padding: 30; -fx-background-color: #f5f5f5;"
      prefWidth="800" prefHeight="600"
      alignment="CENTER">

    <Label text="Clutch Mandem Bank - Main Menu"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066cc;"/>

    <Separator style="-fx-background-color: #cccccc; -fx-pref-width: 400;"/>

    <VBox spacing="15" alignment="CENTER">
        <Button text="Customer Management"
                onAction="#handleCustomerManagement"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="300" prefHeight="50"/>

        <Button text="Account Management"
                onAction="#handleAccountManagement"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="300" prefHeight="50"/>

        <Button text="Transactions"
                onAction="#handleTransactions"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="300" prefHeight="50"/>

        <Button text="Reports"
                onAction="#handleReports"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #9C27B0; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="300" prefHeight="50"/>

        <Button text="Logout"
                onAction="#handleLogout"
                style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;"
                prefWidth="300" prefHeight="50"/>
    </VBox>

    <Label text="Welcome to Clutch Mandem Bank Management System"
           style="-fx-font-size: 14px; -fx-text-fill: #666666; -fx-font-style: italic;"/>
</VBox>