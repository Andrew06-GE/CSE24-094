<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.com.banking.Controller.CustomerRegistrationController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f0f0f0;"
      prefWidth="800" prefHeight="600">

    <Label text="Customer Registration"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066cc;"/>

    <!-- Customer Type Selection -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc;">
        <Label text="Customer Type:" style="-fx-font-weight: bold;"/>
        <HBox spacing="20">
            <RadioButton fx:id="individualRadio" text="Individual Customer"
                         onAction="#toggleCustomerFields" selected="true"/>
            <RadioButton fx:id="corporateRadio" text="Corporate Customer"
                         onAction="#toggleCustomerFields"/>
        </HBox>
    </VBox>

    <!-- Individual Customer Fields -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc;">
        <Label text="Individual Customer Details:" style="-fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="First Name:" prefWidth="120"/>
            <TextField fx:id="firstNameField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Surname:" prefWidth="120"/>
            <TextField fx:id="surnameField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Address:" prefWidth="120"/>
            <TextField fx:id="addressField" prefWidth="300"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Date of Birth:" prefWidth="120"/>
            <DatePicker fx:id="dateOfBirthPicker" prefWidth="200"/>
        </HBox>

        <Button text="Register Individual" onAction="#handleRegisterIndividual"
                style="-fx-font-size: 14px; -fx-background-color: #28a745; -fx-text-fill: white;"
                prefWidth="150"/>
    </VBox>

    <!-- Corporate Customer Fields -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc;">
        <Label text="Corporate Customer Details:" style="-fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Company Name:" prefWidth="120"/>
            <TextField fx:id="companyNameField" prefWidth="300" disable="true"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Company Address:" prefWidth="120"/>
            <TextField fx:id="companyAddressField" prefWidth="300" disable="true"/>
        </HBox>

        <Button text="Register Corporate" onAction="#handleRegisterCorporate"
                style="-fx-font-size: 14px; -fx-background-color: #007bff; -fx-text-fill: white;"
                prefWidth="150"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Clear All Fields" onAction="#handleClearFields"
                style="-fx-font-size: 14px; -fx-background-color: #6c757d; -fx-text-fill: white;"
                prefWidth="120"/>

        <Button text="← Back to Main Menu" onAction="#handleBackToMain"
                style="-fx-font-size: 14px; -fx-background-color: #cccccc; -fx-text-fill: black;"
                prefWidth="150"/>
    </HBox>
</VBox>