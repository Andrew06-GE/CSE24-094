<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.com.banking.Controller.TransactionController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f0f0f0;"
      prefWidth="800" prefHeight="600">

    <!-- Header -->
    <Label text="Transactions"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066cc;"/>

    <!-- Input Section -->
    <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5;">
        <Label text="Account Details" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Account Number:" prefWidth="120"/>
            <TextField fx:id="accountNumberField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Amount:" prefWidth="120"/>
            <TextField fx:id="amountField" prefWidth="200"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Transaction Type:" prefWidth="120"/>
            <RadioButton fx:id="depositRadio" text="Deposit"/>
            <RadioButton fx:id="withdrawRadio" text="Withdraw"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Process Transaction" onAction="#processTransaction"
                    style="-fx-font-size: 14px; -fx-background-color: #0066cc; -fx-text-fill: white;"
                    prefWidth="150"/>
            <Button text="Clear Fields" onAction="#clearFields"
                    style="-fx-font-size: 14px; -fx-background-color: #cccccc; -fx-text-fill: black;"
                    prefWidth="100"/>
        </HBox>

        <Label fx:id="statusLabel" style="-fx-text-fill: #006600; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Quick Action Buttons -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 15;">
        <Label text="Quick Actions" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Button text="Quick Deposit" onAction="#handleDeposit"
                style="-fx-font-size: 14px; -fx-background-color: #28a745; -fx-text-fill: white;"
                prefWidth="200" prefHeight="40"/>

        <Button text="Quick Withdraw" onAction="#handleWithdraw"
                style="-fx-font-size: 14px; -fx-background-color: #dc3545; -fx-text-fill: white;"
                prefWidth="200" prefHeight="40"/>

        <Button text="Apply Monthly Interest" onAction="#handleApplyInterest"
                style="-fx-font-size: 14px; -fx-background-color: #ffc107; -fx-text-fill: black;"
                prefWidth="200" prefHeight="40"/>
    </VBox>

    <!-- Transaction Log -->
    <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: white; -fx-border-color: #cccccc;">
        <Label text="Transaction Log:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="outputArea" prefHeight="150" editable="false"
                  style="-fx-font-family: 'Consolas'; -fx-font-size: 12px;"/>
    </VBox>

    <!-- Navigation Button - Now properly placed and visible -->
    <HBox alignment="CENTER" style="-fx-padding: 10;">
        <Button text="← Back to Main Menu" onAction="#handleBackToMain"
                style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #6c757d; -fx-text-fill: white; -fx-border-radius: 5;"
                prefWidth="180" prefHeight="35"/>
    </HBox>
</VBox>