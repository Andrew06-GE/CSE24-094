<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.banking.Controller.CustomerRegistrationController"
            prefWidth="800" prefHeight="600">

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- Individual Customer Tab -->
                <Tab text="Individual Customer">
                    <content>
                        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f0f0f0;">
                            <Label text="Register Individual Customer"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0066cc;"/>

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="150"/>
                                    <ColumnConstraints prefWidth="300"/>
                                </columnConstraints>

                                <Label text="First Name:*" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Surname:*" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="surnameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Address:*" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Date of Birth:*" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                                    <Label text="Year:"/>
                                    <Spinner fx:id="yearSpinner" prefWidth="80"/>
                                    <Label text="Month:"/>
                                    <Spinner fx:id="monthSpinner" prefWidth="80"/>
                                    <Label text="Day:"/>
                                    <Spinner fx:id="daySpinner" prefWidth="80"/>
                                </HBox>
                            </GridPane>

                            <Button text="Register Individual Customer"
                                    onAction="#handleRegisterIndividual"
                                    style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: white; -fx-text-fill: black; -fx-border-color: darkgray; -fx-border-width: 3px;"
                                    prefWidth="350" prefHeight="50"/>

                            <Label text="* Required fields"
                                   style="-fx-font-style: italic; -fx-text-fill: gray;"/>
                        </VBox>
                    </content>
                </Tab>

                <!-- Corporate Customer Tab -->
                <Tab text="Corporate Customer">
                    <content>
                        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f0f0f0;">
                            <Label text="Register Corporate Customer"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0066cc;"/>

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="150"/>
                                    <ColumnConstraints prefWidth="300"/>
                                </columnConstraints>

                                <Label text="Company Name:*" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="companyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Company Address:*" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="companyAddressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            </GridPane>

                            <Button text="Register Corporate Customer"
                                    onAction="#handleRegisterCorporate"
                                    style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: white; -fx-text-fill: black; -fx-border-color: darkgray; -fx-border-width: 3px;"
                                    prefWidth="350" prefHeight="50"/>

                            <Label text="* Required fields"
                                   style="-fx-font-style: italic; -fx-text-fill: gray;"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <BorderPane style="-fx-padding: 10; -fx-background-color: #e0e0e0;">
            <left>
                <Button text="â† Back to Main Menu" onAction="#handleBackToMain"
                        style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #cccccc; -fx-text-fill: black; -fx-border-radius: 5; -fx-background-radius: 5;"
                        prefWidth="200" prefHeight="40"/>
            </left>
        </BorderPane>
    </bottom>
</BorderPane>